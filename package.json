{
  "name": "vue-boilerplate",
  "version": "1.0.0",
  "description": "Lite Vue Frontend boilerplate with SSR enabled.",
  "scripts": {
    "dev": "node server",
    "start": "cross-env NODE_ENV=production node server",
    "build": "rimraf dist && npm run build:client && npm run build:server",
    "lint": "eslint --ext .js,.vue src",
    "build:client": "cross-env NODE_ENV=production webpack --mode production --config build/webpack.client.config.js --progress",
    "build:server": "cross-env NODE_ENV=production webpack --mode production --config build/webpack.server.config.js --progress"
  },
  "engines": {
    "node": ">=6"
  },
  "author": "Adrien Beaudouin",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "axios": "^0.18.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-3": "^6.24.1",
    "css-loader": "^0.28.10",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.4.0",
    "file-loader": "^1.1.9",
    "font-awesome": "^4.7.0",
    "img-loader": "^2.0.1",
    "jquery": "^3.3.1",
    "memory-fs": "^0.4.1",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.8.3",
    "postcss-loader": "^2.1.3",
    "resolve-url-loader": "^2.2.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "slick-carousel": "^1.8.1",
    "style-loader": "^0.20.2",
    "sweetalert2": "^7.18.0",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-middleware": "^3.1.0",
    "webpack-hot-middleware": "^2.21.0",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.6.0",
    "webpack-notifier": "^1.5.1"
  },
  "dependencies": {
    "bootstrap-vue": "^2.0.0-rc.1",
    "cross-env": "^5.1.3",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "lru-cache": "^4.1.1",
    "vue": "^2.5.13",
    "vue-meta": "^1.5.0",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.13",
    "vuex": "^3.0.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
